  <ControlTemplate x:Key="Icon.Close" TargetType="{x:Type core:Icon}">
    <Viewbox SnapsToDevicePixels="False"
             UseLayoutRounding="False">
      <Canvas Width="24" Height="24">
        <Path Fill="{TemplateBinding Foreground}"
              Data="M13.46,12L19,17.54V19H17.54L12,13.46L6.46,19H5V17.54L10.54,12L5,6.46V5H6.46L12,10.54L17.54,5H19V6.46L13.46,12Z" />
      </Canvas>
    </Viewbox>
  </ControlTemplate>

  <ControlTemplate x:Key="Icon.Maximize" TargetType="{x:Type core:Icon}">
    <Viewbox SnapsToDevicePixels="False"
             UseLayoutRounding="False">
      <Canvas Width="24" Height="24">
        <Path Fill="{TemplateBinding Foreground}"
              Data="M4,4H20V20H4V4M6,8V18H18V8H6Z" />
      </Canvas>
    </Viewbox>
  </ControlTemplate>

  <ControlTemplate x:Key="Icon.Minimize" TargetType="{x:Type core:Icon}">
    <Viewbox SnapsToDevicePixels="False"
             UseLayoutRounding="False">
      <Canvas Width="24" Height="24">
        <Path Fill="{TemplateBinding Foreground}"
              Data="M20,14H4V10H20" />
      </Canvas>
    </Viewbox>
  </ControlTemplate>

  <ControlTemplate x:Key="Icon.Restore" TargetType="{x:Type core:Icon}">
    <Viewbox SnapsToDevicePixels="False"
             UseLayoutRounding="False">
      <Canvas Width="24" Height="24">
        <Path Fill="{TemplateBinding Foreground}"
              Data="M4,8H8V4H20V16H16V20H4V8M16,8V14H18V6H10V8H16M6,12V18H14V12H6Z" />
      </Canvas>
    </Viewbox>
  </ControlTemplate>

  <ControlTemplate x:Key="ShellTemplate" TargetType="{x:Type Window}">
    <Border x:Name="RootBorder"
            BorderBrush="{StaticResource Brush.TitleBar.Border}"
            BorderThickness="0"
            UseLayoutRounding="True">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>

      <Grid Grid.Row="0">
        <Rectangle
          Height="30"
          Fill="{StaticResource Brush.TitleBar.Background}" />
        <DockPanel LastChildFill="False">

          <core:Icon
            Margin="8,0,0,0"
            DockPanel.Dock="Left"
            Template="{DynamicResource Icon.App}"
            Foreground="{StaticResource Brush.TitleBar.Foreground}"
            Height="20" Width="20"
            WindowChrome.IsHitTestVisibleInChrome="True" />

          <TextBlock
            Margin="8,0,0,0"
            VerticalAlignment="Center"
            DockPanel.Dock="Left"
            Foreground="{StaticResource Brush.TitleBar.Foreground}"
            Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Title}" />

          <Button x:Name="CloseButton"
                  Click="OnCloseClick"
                  DockPanel.Dock="Right"
                  Style="{StaticResource WindowsButtonCloseStyle}">
            <core:Icon Template="{DynamicResource Icon.Close}"
                       Height="16" Width="16"
                       Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" />
          </Button>

          <Button x:Name="MaximizeRestoreButton"
                  Click="OnMaximizeRestoreClick"
                  DockPanel.Dock="Right"
                  Style="{StaticResource WindowsButtonStandardStyle}">
            <core:Icon x:Name="MaximizeRestoreIcon"
                       Template="{DynamicResource Icon.Maximize}"
                       Height="16" Width="16"
                       Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" />
          </Button>

          <Button x:Name="MinimizeButton"
                  Click="OnMinimizeClick"
                  DockPanel.Dock="Right"
                  Style="{StaticResource WindowsButtonStandardStyle}">
            <core:Icon Template="{DynamicResource Icon.Minimize}"
                       Height="16" Width="16"
                       Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" />
          </Button>
        </DockPanel>
      </Grid>

      <Grid Grid.Row="1">
        <Border
          Background="{TemplateBinding Background}"
          BorderBrush="{TemplateBinding BorderBrush}"
          BorderThickness="{TemplateBinding BorderThickness}">
          <AdornerDecorator>
            <ContentPresenter />
          </AdornerDecorator>
        </Border>
      </Grid>
    </Grid>
    </Border>
    <ControlTemplate.Triggers>
      <Trigger Property="ResizeMode" Value="CanResize">
        <Setter TargetName="MaximizeRestoreButton" Property="Visibility" Value="Visible" />
      </Trigger>
      <Trigger Property="ResizeMode" Value="CanMinimize">
        <Setter TargetName="MaximizeRestoreButton" Property="Visibility" Value="Collapsed" />
      </Trigger>
      <Trigger Property="WindowState" Value="Maximized">
        <Setter TargetName="RootBorder" Property="BorderThickness" Value="8" />
        <Setter TargetName="RootBorder" Property="BorderBrush" Value="Transparent" />
        <Setter TargetName="MaximizeRestoreIcon" Property="Template" Value="{DynamicResource Icon.Restore}" />
      </Trigger>
    </ControlTemplate.Triggers>
  </ControlTemplate>

  <Style x:Key="ShellStyle" TargetType="{x:Type Window}">
    <Setter Property="UseLayoutRounding" Value="True" />
    <Setter Property="Background" Value="{StaticResource Brush.Light.Background}" />
    <Setter Property="Foreground" Value="#567791" />
    <Setter Property="TextOptions.TextFormattingMode" Value="Ideal" />
    <Setter Property="TextOptions.TextRenderingMode" Value="ClearType" />
    <Setter Property="WindowChrome.WindowChrome">
      <Setter.Value>
        <WindowChrome
          CaptionHeight="30"
          CornerRadius="0"
          GlassFrameThickness="1"
          NonClientFrameEdges="None"
          ResizeBorderThickness="4"
          UseAeroCaptionButtons="False" />
      </Setter.Value>
    </Setter>
    <Setter Property="Template" Value="{StaticResource ShellTemplate}" />
  </Style>
</ResourceDictionary>