<UserControl x:Class="ioList.Views.ListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:ioList.ViewModels"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:c="clr-namespace:ioList.Resources.Controls"
             xmlns:p="clr-namespace:ioList.Resources.Properties"
             prism:ViewModelLocator.AutoWireViewModel="True"
             d:DataContext="{d:DesignInstance Type=viewModels:ListViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="300">
  <UserControl.Resources>

    <Style x:Key="LocalIconButtonStyle"
           TargetType="{x:Type c:IconButton}"
           BasedOn="{StaticResource Style.Button.Icon}">
      <Setter Property="Background" Value="#457EC9" />
      <Setter Property="Foreground" Value="#AAF8F3" />
      <Setter Property="Margin" Value="10 4" />
      <Setter Property="Padding" Value="6" />
      <Setter Property="BorderThickness" Value="0"></Setter>
      <Setter Property="IconHeight" Value="14" />
      <Setter Property="IconWidth" Value="14" />
      <Setter Property="IconMargin" Value="5 0 3 0"></Setter>
      <Setter Property="ContentMargin" Value="3 0 5 0"></Setter>
      <Setter Property="p:BorderProperties.CornerRadius" Value="10" />
    </Style>
  </UserControl.Resources>

  <Grid Background="{StaticResource Brush.WindowHeader.Background}">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="2*" />
      <RowDefinition />
    </Grid.RowDefinitions>

    <StackPanel Grid.Row="0">

      <Grid>
        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
          <c:IconButton Icon="{StaticResource Icon.User}" 
                         Margin="5"
                         Foreground="#A6BED1"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
          <c:IconButton Icon="{StaticResource Icon.Settings}" 
                         Margin="5"
                         Foreground="#A6BED1"/>
          <c:IconButton Icon="{StaticResource Icon.CollapseLeft}" 
                         Margin="5"
                         Foreground="#A6BED1"/>
        </StackPanel>
      </Grid>

      <Grid>
        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Margin="10 10 0 10">
          <c:IconButton Style="{StaticResource LocalIconButtonStyle}"
                         Icon="{StaticResource Icon.Add}"
                         Content="Create"
                         Command="{Binding CreateListCommand}">
          </c:IconButton>
          <c:IconButton Style="{StaticResource LocalIconButtonStyle}"
                         Background="#3EB8BC"
                         Foreground="#175C5E"
                         Icon="{StaticResource Icon.Import}"
                         Content="Import">
          </c:IconButton>
          <c:IconButton Style="{StaticResource LocalIconButtonStyle}"
                         Background="#DC5959"
                         Foreground="#FFECC5"
                         Icon="{StaticResource Icon.Delete}"
                         Content="Delete">
          </c:IconButton>
        </StackPanel>
      </Grid>

    </StackPanel>

    <ListView Grid.Row="1"
              ItemsSource="{Binding Lists}"
              BorderThickness="0"
              Background="Transparent">
      <ListView.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Horizontal" Margin="10">
            <c:Icon Template="{StaticResource Icon.List}"
                     Margin="5 0"
                     Foreground="#B8CCEE" />
            <TextBlock Text="{Binding Name}" Margin="10 0 0 0"
                       Foreground="#DBDFE5"
                       FontWeight="SemiBold" />
          </StackPanel>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </Grid>
</UserControl>