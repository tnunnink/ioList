<UserControl x:Class="ioList.Views.ListNotFoundError"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:core="http://CoreTools.com/wpf"
             xmlns:observers="clr-namespace:ioList.Observers"
             prism:ViewModelLocator.AutoWireViewModel="True"
             d:DataContext="{d:DesignInstance Type=observers:ListFileObserver}"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">
  <Grid>

    <StackPanel VerticalAlignment="Center"
                HorizontalAlignment="Center">
      <core:Icon Template="{StaticResource Icon.Error}"
                 Height="48" Width="48"
                 Margin="0 -20 0 20"/>
      <TextBlock Text="Could Not Find List"
                 TextAlignment="Center"
                 FontSize="18"
                 Margin="0 0 0 10"
                 FontWeight="SemiBold" />
      <TextBlock Text="The configure list path no  longer exists. Check..."
                 TextAlignment="Center" />
    </StackPanel>
  </Grid>
</UserControl>